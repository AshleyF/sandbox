# News Bot Configuration
# Copy this file to .env and customize

# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key-here

# Crawler settings
MAX_DEPTH=2
MAX_PAGES=100
REQUEST_DELAY=1.0
REQUEST_TIMEOUT=10
USER_AGENT=NewsBot/1.0

# Cache settings
CACHE_DIR=cache
CRAWL_STATE_FILE=crawl_state.json

# How long before re-crawling a URL (in hours)
RECRAWL_AFTER_HOURS=24

# News sources (comma-separated)
NEWS_SOURCES=https://www.cnn.com,https://www.bbc.com,https://www.reuters.com,https://www.npr.org,https://www.theguardian.com,https://apnews.com

# Analyzer settings
ANALYSIS_FILE=news_analysis.json
OPENAI_MODEL=gpt-4o-mini
